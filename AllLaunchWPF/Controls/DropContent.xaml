<UserControl x:Class="AllLaunchWPF.DropContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllLaunchWPF"
             mc:Ignorable="d" 
             Background="{StaticResource BackgroundElevation2Brush}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Padding="10"
                Background="{StaticResource BackgroundAbasementBrush}"
                >

            <Border.Effect>
                <DropShadowEffect Direction="270" BlurRadius="4" Opacity="0.15" />
            </Border.Effect>
        </Border>  
    </Grid>
</UserControl>
